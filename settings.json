{
  // Window Settings
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "hidden",
  "window.customTitleBarVisibility": "never",
  "window.zoomLevel": 0,

  // Workbench settings
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.showTabs": "single",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.layoutControl.enabled": true,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.colorCustomizations": {},

  // Editor Settings
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.scale": 1,
  "editor.minimap.showSlider": "mouseover",
  "editor.minimap.size": "fill",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "gutter",
  "editor.lightbulb.enabled": "off",
  "editor.showFoldingControls": "never",
  "editor.dragAndDrop": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "editor.lineHeight": 1.7,
  "explorer.compactFolders": true,
  "breadcrumbs.enabled": false,

  //  Editor Font Settings
  "editor.fontFamily": "Hack, Fira Code, Consolas",
  "editor.fontLigatures": false,
  "editor.fontSize": 12.5,
  "editor.fontWeight": "400",

  //  Editor Wrap Settings
  "editor.wordWrap": "off",
  "editor.wrappingIndent": "indent",

  //  Editor Formatting Settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.bracketSameLine": true,
  "prettier.proseWrap": "always",
  "prettier.printWidth": 300,
  "tailwindCSS.experimental.classRegex": ["class:\\s*?[\"'`]([^\"'`]*).*?,"],

  //  Editor - Suggestions Settings
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestionsDelay": 10,
  "editor.suggestOnTriggerCharacters": true,
  "editor.tabCompletion": "off",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.parameterHints.enabled": true,

  // Git Diff settings
  "scm.diffDecorations": "gutter",
  "git.decorations.enabled": true,

  //  Terminal Settings
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono, Monaco, monospace",
  "terminal.integrated.tabs.enabled": false,

  // Prettier Settings
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "always",
  "prettier.insertPragma": false,
  "prettier.trailingComma": "none",

  // EXTENSION SETTINGS
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.classAttributes": ["class", "className", "ngClass"],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "gitlens.graph.minimap.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "material-icon-theme.hidesExplorerArrows": true,
  // "codeium.enableCodeLens": false,
  "apc.electron": {
    "titleBarStyle": "hidden"
  },
  "workbench.editor.enablePreview": false,
  "workbench.colorTheme": "Night Owl (No Italics)"
}
