{
  //* Window Settings
  "window.titleBarStyle": "native",
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "never",

  //* Editor Settings
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.renderWhitespace": "none",
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,

  // * Editor Font Settings
  "editor.fontFamily": "Fira Code, MonoLisa",
  "editor.fontLigatures": false,
  "editor.fontSize": 15,

  // * Editor Wrap Settings
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 100,
  "editor.wrappingIndent": "indent",

  // * Editor Formatting Settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python",
    "editor.wordBasedSuggestions": "off"
  },

  // * Editor - Suggestions Settings
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestionsDelay": 10,
  "editor.suggestOnTriggerCharacters": true,
  "editor.tabCompletion": "off",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.parameterHints.enabled": true,

  // * Terminal Settings
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono, monospace",

  //* Tailwind CSS Intellisense
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.classAttributes": ["class", "className", "ngClass"],

  //* Workbench Settings
  "workbench.iconTheme": "material-icon-theme",

  //* Discord Rich Presence Settings
  "vscord.behaviour.suppressNotifications": true,

  //* Tabnine Settings
  "tabnine.experimentalAutoImports": true,

  //* Prettier Settings
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "always",
  "prettier.insertPragma": false,
  "prettier.trailingComma": "none"
}
